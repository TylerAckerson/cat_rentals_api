<h1> <%=@cat.name%></h1>

<table>
  <th> <%= @cat.name %> </th>
<tr>
<td><%= "Birthday" %></td><td><%= "#{@cat.birth_date}" %></td>
</tr>
<tr>
<td><%= "Color" %></td><td><%= "#{@cat.color}" %></td>
</tr>
<tr>
<td><%= "Sex" %></td><td><%= "#{@cat.sex}" %></td>
</tr>
<tr>
<td><%= "Description" %></td><td><%= "#{@cat.description}" %></td>
</tr>
</table>
<br >

<table border="1">
  <th> Rentals for <%= @cat.name %> </th>
  <% @cat.cat_rental_requests.each.sort_by(&:start_date).each do |request| %>
  <tr>
    <td> Start Date </td>
    <td> <%= "#{request.start_date}" %></td>
  </tr>
  <tr>
    <td> End Date </td>
    <td> <%= "#{request.end_date}" %></td>
  </tr>
  <tr>
    <td> Status </td>
    <td> <%= "#{request.status}" %></td>
  </tr>
<% end %>
<hr>
</table>
<hr>

<%= link_to "Edit cat", edit_cat_url(@cat.id) %>
<br>
<%= link_to "Back to Cats", cats_path %>
